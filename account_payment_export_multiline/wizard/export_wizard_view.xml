<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="view_payment_order_export_wizard_form" model="ir.ui.view">
        <field name="name">Payment Export Wizard</field>
        <field name="model">payment.order.export.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Payment Order Export">
                <group colspan="4" col="4" attrs="{'invisible': [('state','!=','init')]}" height="170">
                    <field name="charges_code"/>
                    <field name="payment_method"/>
                </group>
                <group colspan="4" col="4" attrs="{'invisible': [('state','!=','export')]}">
                    <field name="export_file" colspan="4" filename="export_filename"/>
                    <field name="export_filename" colspan="4"/>
                    <field name="note" colspan="4" nolabel="1"/>
                </group>
                <group colspan="4" col="4">
                    <field name="state" invisible="1"/>
                    <button special="cancel" string="Cancel" icon="gtk-cancel" states="init"/>
                    <button type="object" name="button_payment_export" string="Make Export" icon="gtk-execute" states="init"/>
                    <button special="cancel" string="Close" icon="gtk-close" states="export,error"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_payment_order_export_wizard" model="ir.actions.act_window">
        <field name="name">Payment Export Wizard</field>
        <field name="res_model">payment.order.export.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_payment_order_export_wizard_form"/>
        <field name="target">new</field>
    </record>

</data>
</openerp>
